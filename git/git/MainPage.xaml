<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="git.MainPage">

    <ScrollView>
        <VerticalStackLayout>
           <Label 
            Text="Hello, .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

            <Button 
            Text="Click Me"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            Clicked="OnCounterClicked"/>

            <!-- Botón para generar array secuencial -->
            <Button 
            Text="Generar Array Secuencial"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            Clicked="OnSequentialArrayClicked"/>

            <!-- Label para mostrar el array secuencial -->
            <Label 
            x:Name="SequentialArrayLabel"
            Text="Array Secuencial: "
            VerticalOptions="Center"
            HorizontalOptions="Center" />
        </VerticalStackLayout>
        
    </ScrollView>

</ContentPage>
